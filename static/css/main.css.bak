h2, h3 {
  font-family: 'Changa One', sans-serif;
  color: #9932CC;
}

a {
  font-family: 'Changa One', 'Helvetic Neue', sans-serif;
}

#title {
  margin-top: 20px;
  text-align: center;
}

.login {
  float: right;
  margin-left: 20%;
  margin-right: 20%;
}

a, a:visited {
  color: #000;
  text-decoration: none;
}

a.selected, a:hover {
  color: #e6539c;
  text-decoration: none;
}

#container {
  margin-top: 3%;
  margin-left: 20%;
  margin-right: 20%;
}

#edit-post {
  background-color:#DCDCDC;
  border-radius: 15px 50px 30px;
  padding-left: 5%;
  padding-top: 2%;
  padding-bottom: 2%;
  font-family: 'Changa One', sans-serif;

}

.post {
  background-color: #DCDCDC;
  border-radius: 15px 50px 30px;
  padding-left: 5%;
  padding-top: 3%;
  padding-bottom: 3%;
  margin-bottom: 3%;
}

.post-footer {
  margin-top: 10px;
  margin-bottom: 10px;
  padding-left: 30px;
  color: #6495ED;
}

.post-footer-element {
  padding-right: 50px;
  font-size: 14px;
}

.post-title {
  margin-top: 8px;
  margin-bottom: 8px;
  font-size: 24px;
}

.post-content {
  margin-top: 8px;
  margin-bottom: 8px;
  font-size: 18px;
}

.post-buttons {
  float: right;
  margin-right: 30px;
  background-color: #ffffff;
  padding: 5px;
}

.clearfix:before,
.clearfix:after {
  content: "";
  display: table;
}

.clearfix:after {
  clear: both;
}

.clearfix {
  *zoom: 1;
}

#new-post {
  font-size: 18px;
  color: white;
  background-color: orange;
  padding: 10px 20px;
}
